/**
 * Reset styles
 */

*
*:before
*:after
	margin 0
	padding 0
	box-sizing border-box

h1
	font-size 2rem
h2
	font-size 1.414rem
h3
	font-size 1.155rem
h4
	font-size 1rem
h5
	font-size 0.894rem
h6
	font-size 0.816rem

input
	color inherit

select
input
	font-size inherit

::-webkit-input-placeholder
	color inherit
	opacity .3

::-moz-placeholder
	color inherit
	opacity .3

a
a:visited
a:focus
a:hover
	color inherit
	text-decoration none
	position relative

a:before
	content ""
	height .3em
	position absolute
	left 0
	right 0
	bottom -.2em
	background-color var(--color_07)
	transform scaleY(0)
	transform-origin bottom
	transition transform .15s ease, opacity .15s ease
	opacity 0

a:hover:before
	transform scaleY(1)
	opacity .7

*::selection
	color var(--background_color)
	background-color var(--color_07)
